
# ibus
export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus

if [ "$XDG_CURRENT_DESKTOP" = "i3" ]; then
    export QT_QPA_PLATFORMTHEME="qt5ct"
    export GTK_THEME='Adwaita:dark'
fi

# share mouse and keyboard
if [[ $(hostname) != "r-lm"* ]]; then
	barrier &
fi

# for Logitech M570
xbindkeys

# set environment var
source $HOME/.bashrc

# 双屏环境
if [[ $(hostname) == "r-lc" ]]; then
  xrandr --output DisplayPort-1 --right-of HDMI-A-0 --auto
  xrandr --output HDMI-A-0 --left-of DisplayPort-1 --auto
fi
if [[ $(hostname) == "r-lh" ]]; then
  SCR_LEFT="DVI-D-0"
  SCR_RIGHT="HDMI-0"
  xrandr --output $SCR_LEFT --left-of $SCR_RIGHT --mode 1920x1080
  xrandr --output $SCR_RIGHT --right-of $SCR_LEFT --mode 1920x1080
fi

$HOME/.config/polybar/launch.sh

